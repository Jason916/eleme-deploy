{{ include('deploy/header.twig') }}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">Pull Request Logs</div>
        <div class="panel-body">
            <table class="table table-striped table-hover pull-request-list">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>User</th>
                    <th>Open Time</th>
                    <th>Status</th>
                    <th>Last Commit</th>
                    <th>Build status</th>
                    <th>Operation</th>
                </tr>
                </thead>
                <tbody>
                {% for m in pullRequests %}
                <tr class="{{ m.status=='closed' ? '' : (m.commitBuild=='Success' ? 'text-success' : (m.commitBuild=='Waiting' ? 'text-warning' : 'text-danger')) }}">

                        <td><a href="{{ m.url }}" target="_blank">{{ m.id }}</a></td>
                        <td>{{ m.title }}</td>
                        <td><a href="https://github.com/{{ m.repo }}/tree/{{ m.branch }}" target="_blank">{{ m.user }}</td>
                        <td>{{ m.createAt }}</td>
                        {% if m.mergedBy == '' %}
                            <td>{{ m.status }}</td>
                        {%else%}
                            <td>Merged By <a href="https://github.com/{{ m.mergedBy }}" target="_blank">{{ m.mergedBy }}</a></td>
                        {% endif %}
                        <td class="cv-font">{{ m.lastCommit[0:7] }}</td>
                        <td>{{ m.commitBuild }}</td>
                        <td><button class="btn btn-info btn-xs">Rebuild</button></td>

                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{ include('deploy/footer.twig') }}
